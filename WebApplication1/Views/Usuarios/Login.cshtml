@model WebApplication1.Models.Usuarios
@{
    ViewData["Title"] = "Login";
}
<h2 style="text-align: center;">INICIAR SESION</h2>
<div class="container text-center mt-3">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="card text-center">
                <div class="card-header bg-primary text-white">
                    Iniciar Sesión
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div class="row">
                            <div class="col-12">
                                <label asp-for="Usuario"></label>
                                <input type="text" asp-for="Usuario" class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <label asp-for="Password"></label>
                                <input type="password" asp-for="Password" class="form-control">
                            </div>
                        </div>
                        <div class="mt-2">
                            <input type="submit" value="Iniciar Sesión" class="btn btn-primary">
                        </div>

                    </form>

                </div>
            </div>
            @if(ViewBag.Error != null){
                <h3 class="text-center text-danger">@ViewBag.Error</h3>
            }
        </div>

    </div>
</div>